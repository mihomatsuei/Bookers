<h2>Eding Book</h2>

<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>

<br><%= f.submit 'Update Book' %></br>

<% end %>

<%= link_to "Show", book_path %>
<%= link_to "Back",books_path  %>

<% if @book.errors.any? %>
error
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>